<Page
    x:Class="RuiNote.Views.ContentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RuiNote.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:conv="using:RuiNote.Helpers"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding ContentPage, Source={StaticResource Locator}}">
    
    <!--TODO: Content should be placed within the following grid-->
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="640" Stroke="Black" VerticalAlignment="Top" Width="400">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFBB0015"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        
        <Pivot x:ConnectionId='1' x:Name="contentPivot"
                                                               >
            <PivotItem Header="Home">
                <Grid>
                    <Image HorizontalAlignment="Left" 
                           Height="60" 
                           Margin="7,10,0,0" 
                           VerticalAlignment="Top" 
                           Width="60" 
                           Source="ms-appx:///Icons/status.png"/>
                    
                    <TextBlock x:Name="userName" 
                               HorizontalAlignment="Left" 
                               Margin="72,22,0,0" 
                               TextWrapping="Wrap" 
                               Text="{Binding GetUser}" 
                               VerticalAlignment="Top" 
                               Height="38" 
                               Width="246" 
                               FontFamily="Segoe WP" 
                               FontSize="24"/>
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Top" 
                                Margin="0,70,0,0">

                        <Button x:Name="newNoteBtn" 
                                Height="200" Width="170" 
                                Command="{Binding AddNewNoteCommand, Mode=OneWay}">
                            
                            <Grid Height="150" Width="150">
                                <Image HorizontalAlignment="Left" 
                                       Height="150" Width="150" 
                                       VerticalAlignment="Top" 
                                       Source="ms-appx:///Icons/add.png"/>
                                <TextBlock TextWrapping="Wrap" 
                                           Text="New Note"/>
                            </Grid>
                        </Button>

                        <StackPanel Orientation="Vertical" 
                                    Margin="10,0,0,0">
                            <StackPanel Orientation="Horizontal">

                                <Button x:Name="Btn2" 
                                        MinWidth="80" MinHeight="100">
                                    <Grid Height="60" Width="60">
                                        <Image HorizontalAlignment="Left" 
                                               Height="80" Width="80" 
                                               VerticalAlignment="Top"
                                               Source="ms-appx:///Icons/feature.camera.png" 
                                               Margin="-8,-8,-12,-11"/>
                                    </Grid>

                                </Button>
                                <Button x:Name="Btn3" 
                                        MinWidth="80" MinHeight="100" 
                                        Margin="11,0,0,0">
                                    <Grid Height="60" Width="60">
                                        <Image HorizontalAlignment="Left" 
                                               Height="80" Width="80"
                                               VerticalAlignment="Top" 
                                               Source="ms-appx:///Icons/attach.png" 
                                               Margin="-8,-8,-12,-11"/>
                                    </Grid>
                                </Button>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" 
                                        Margin="0,0,0,0">

                                <Button x:Name="Btn4" 
                                        MinWidth="80" MinHeight="100" >
                                    <Grid Height="60" Width="60">
                                        <Image HorizontalAlignment="Left" 
                                               Height="80" Width="80" 
                                               VerticalAlignment="Top" 
                                               Source="ms-appx:///Icons/microphone.png"
                                               Margin="-8,-8,-12,-11"/>
                                    </Grid>
                                </Button>
                                <Button x:Name="Btn5" 
                                        MinWidth="80" MinHeight="100" 
                                        Margin="11,0,0,0"  >
                                    
                                    <Grid Height="60" Width="60">
                                        <Image HorizontalAlignment="Left" 
                                               Height="65" Width="65" 
                                               VerticalAlignment="Top" 
                                               Source="ms-appx:///Icons/ruinote.png" 
                                               Margin="-4,0,-1,-5"/>
                                    </Grid>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                    <Button Content="VIEW ALL NOTES" 
                            HorizontalAlignment="Left" 
                            Margin="2,300,0,0" 
                            VerticalAlignment="Top" 
                            Width="170"  
                            BorderThickness="0" 
                            Command="{Binding ViewAllNotesCommand, Mode=OneWay}"/>

                </Grid>
            </PivotItem>

            <PivotItem Header="Recent">
                <ListView  x:Name="noteListView" 
                           ItemsSource="{Binding NoteList}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border x:ConnectionId='2' BorderBrush="White"
                                    BorderThickness="2"
                                    CornerRadius="5"
                                    Width="350"
                                    Margin="0,5" 
                                                            >

                                <FlyoutBase.AttachedFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="Delete"
                                                        Command="{Binding DataContext.DeleteNoteCommand, ElementName=noteListView}" 
                                                        CommandParameter="{Binding Mode=OneWay}"/>
                                            
                                        <MenuFlyoutItem Text="Edit"
                                                        Command="{Binding DataContext.EditNoteCommand, ElementName=noteListView}" 
                                                        CommandParameter="{Binding Mode=OneWay}"/>
                                    </MenuFlyout>
                                </FlyoutBase.AttachedFlyout>

                                <StackPanel >
                                    <TextBlock FontSize="30" 
                                               Text="{Binding NoteTitle}"/>
                                    <TextBlock FontSize="18" 
                                               Text="{Binding NoteTime}"/>                                   
                                    <TextBlock FontSize="25"
                                               TextWrapping="Wrap" 
                                               Text="{Binding NoteContent}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>

            <PivotItem Header="Notebooks">
                <Grid HorizontalAlignment="Left" 
                      Margin="10,0,0,0" VerticalAlignment="Top" 
                      Width="350" Height="464">
                    <TextBox HorizontalAlignment="Left" 
                             Margin="40,8,0,0" 
                             TextWrapping="Wrap" 
                             VerticalAlignment="Top" 
                             Width="300"/>
                    
                    <Image HorizontalAlignment="Left" 
                           Height="58" 
                           Margin="-9,2,0,0" 
                           VerticalAlignment="Top" 
                           Width="52" 
                           Source="ms-appx:///Icons/feature.search.png"/>
                    
                    <ListView x:Name="itemListView"
                              Margin="0,60,0,0">
                        
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="110" 
                                      Margin="6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="1" 
                                                VerticalAlignment="Top" 
                                                Margin="10,0,0,0">
                                        <TextBlock Text="Title" 
                                                   TextWrapping="NoWrap"/>
                                        <TextBlock Text="Subtitle" 
                                                   TextWrapping="NoWrap"/>
                                        <TextBlock Text="Description" 
                                                   MaxHeight="60"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>

    <Page.Resources>
        <conv:BooleanToVisibilityConverter x:Key="MyConverter"/>
    </Page.Resources>
    
    <Page.BottomAppBar>
        <CommandBar Name="ContentPageBottomAppBar">
            <CommandBar.PrimaryCommands>
                <!--buttons of group 1-->
                <AppBarButton Label="sync" 
                              Icon="Sync" />

                <!--buttons of group 2-->
                <AppBarButton Label="new note" 
                              Icon="Page" 
                              Command="{Binding AddNewNoteCommand, Mode=OneWay}" 
                              Visibility="{Binding AppBarButtonNewNoteVisibility, Converter={StaticResource MyConverter}}"/>
                
                <AppBarButton Label="new" 
                              Icon="NewFolder" 
                              Command="{Binding AddNewNoteFolderCommand, Mode=OneWay}"
                              Visibility="{Binding AppBarButtonNewNotebookVisibility, Converter={StaticResource MyConverter}}"/>

                <!--buttons of group 3-->
                <AppBarButton Label="search" 
                              Icon="Find" />
                
            </CommandBar.PrimaryCommands>

            <CommandBar.SecondaryCommands>
                <AppBarButton Name="logout" 
                              Label="logout" 
                              Command="{Binding LogoutCommand, Mode=OneWay}" />
                <AppBarButton Name="about" 
                              Label="about"/>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>

</Page>

